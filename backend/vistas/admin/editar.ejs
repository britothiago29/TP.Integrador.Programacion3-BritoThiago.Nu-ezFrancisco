<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>FRAP | Editar Producto</title>
    <link rel="stylesheet" href="/public/css/estilos.css">
</head>

<body>

<header class="header">
    <div class="logo-area">
        <img id="logoFrap" src="/public/assets/imagenes/logo_frap_fclaro.png" class="logo">
    </div>
    <nav class="nav-right">
        <button onclick="window.location.href='/panel'">Panel</button>
        <button id="modoToggle" class="modo-btn">Modo oscuro</button>
    </nav>
</header>

<main style="max-width:800px; margin:120px auto; padding:0 20px;">

    <h1>✏️ Editar producto</h1>

    <form action="/panel/productos/editar/<%= producto.id_producto %>" method="POST" enctype="multipart/form-data"
          style="display:flex; flex-direction:column; gap:20px;">

        <label>Nombre</label>
        <input type="text" name="descripcion" value="<%= producto.descripcion %>" required>

        <label>Precio</label>
        <input type="number" name="precio" value="<%= producto.precio %>" required>

        <label>Categoría</label>
        <select name="id_tipo_producto">
            <% tipos.forEach(t => { %>
                <option value="<%= t.id_tipo_producto %>" <%= t.id_tipo_producto === producto.id_tipo_producto ? "selected" : "" %>>
                    <%= t.descripcion %>
                </option>
            <% }) %>
        </select>

        <label>Imagen actual</label>
        <% if (producto.imagen) { %>
            <img src="/public/uploads/<%= producto.imagen %>" width="120" style="border-radius:12px;">
        <% } %>

        <label>Cambiar imagen</label>
        <input type="file" name="imagen">

        <label>
            <input type="checkbox" name="estado" <%= producto.estado ? "checked" : "" %>>
            Producto activo
        </label>

        <button type="submit"
            style="padding:12px 25px; background:black; color:white; border:none; border-radius:10px; cursor:pointer; width:220px;">
            Guardar cambios
        </button>

    </form>

</main>

<script src="/public/js/modoOscuro.js"></script>

</body>
</html>
